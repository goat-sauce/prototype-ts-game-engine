{
    "compilerOptions": {
        "baseUrl": "./libs",
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "strict": true,
        "downlevelIteration": true,
        "paths": {
            "@main/api": ["main/api"],
            "@preload/api": ["preload/api"],
            "@preload/core": ["preload/core"],
            "@preload/keyboard": ["preload/keyboard"],
            "@preload/game": ["preload/game"],
            "@shared/config": ["shared/config"],
            "@shared/debug": ["shared/debug"],
            "@shared/helpers": ["shared/helpers"],
            "@shared/memory": ["shared/memory"],
            "@shared/channels": ["shared/channels"]
        }
    }
}
